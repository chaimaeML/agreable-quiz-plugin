/* Module/Block: Answer Info */
.quiz__answer-information
  opacity 0
  transition: opacity 1s;

.quiz__answer-information
  display: none;
  position: relative;
  top: -30px;
  margin-left: 10px;
  margin-right: 10px;
  background: rgb(234, 234, 234);
  color: black;
  padding: 10px;
  font-family: Georgia,serif;
  text-transform: none;
  font-size: 16px;
  box-shadow: 0px 5px 24px -7px rgba(10, 8, 8, 0.53);

.quiz__answer-information:before
  content: '';
  position: absolute;
  left: 50%;
  margin-left: -10px;
  height: 20px;
  width: 20px;
  /* -webkit-transform: rotateY(180deg); */
  transform: rotateZ(45deg);
  background: rgb(234, 234, 234);
  top: -10px;

.is-complete .quiz__answer-information
  display: block;

.quiz__answer-information.is-revealed
  opacity 1

.sharing
  position relative
  margin 40px auto
  transition all 0.5s ease-out
  &.hide-wrapper
    height 0
    opacity 0
  &.show-wrapper
    height auto !important
    opacity 1
    min-height 320px

.sharing-facebook
  background-color #3b5999
  &:hover
    background-color #293e6b

.sharing-twitter
  background-color #55acee
  &:hover
    background-color #157ece

.sharing-google
  background-color #dd4b39
  &:hover
    background-color #a62c1d

.sharing-bfc
  position absolute
  left 50%
  transform translateX(-50%)
  background #eaeaea
  padding-right 320px
  height 100%
  border-radius 100%

.sharing-content
  width: 100%
  position absolute
  top 50%
  transform translateY(-50%)

.sharing-quote
  font-size 24px
  margin-top 20px
  margin-bottom 20px
  text-align center
  line-height 1.3
  -webkit-font-smoothing antialiased

@media (min-width: 768px)
  .quiz-sharing-quote
    font-size 34px

.quiz-sharing-row
  overflow hidden
  margin-bottom 20px
  max-width 500px
  margin auto

.btn
  &.sharing-button
    border-radius 0px !important
    text-transform uppercase
    display block
    float left
    width 33.3333333333%
    border none
    color #fff
    font-size 14px
    letter-spacing 0.1em
    padding 0px
    line-height 2em
    cursor pointer
  &.sharing-vote-button
    border-radius 10px !important
    height auto
    padding 10px
    line-height 1.3

@media (min-width: 480px)
  .btn.sharing-button
    font-size 16px
    letter-spacing 0.19em

.sharing-facebook
  background-color #3b5999
  &:hover
    background-color #293e6b

.sharing-twitter
  background-color #55acee
  &:hover
    background-color #157ece

.sharing-google
  background-color #dd4b39
  &:hover
    background-color #a62c1d

.is-bold
  font-weight bold
