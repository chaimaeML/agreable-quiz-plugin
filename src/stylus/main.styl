@import 'nib'
// @import 'stylus/variables'

.widget-quiz
  user-select none

/* Module/Block: Quiz */
.quiz
  background transparent

.quiz ul
  overflow hidden
  padding 0

.quiz__question-container
  position relative

/* Module/Block: Question */
.quiz__question
  margin-bottom 30px
  display inline-block

.quiz__question__number
  display inline
  margin-bottom 1rem

.quiz__question__label
  display inline
  margin-bottom 0
  line-height 1.3rem

/* Module/Block: Question Image */
.quiz__question-image
  margin 30px auto;
  max-width 220px
  display block

@media (min-width: 401px)
  .question-image
    max-width 300px

/* Module/Block: Answers */
.quiz__answers
  clear both
  margin-bottom 0
  box-sizing border-box

.quiz__answers li
  width: 48%;
  margin-right: 4%;
  margin-bottom: 30px;
  float: left;
  position: relative;
  list-style none

.quiz__answers li:nth-child(even)
  margin-right 0

/* Module/Block: Answer */
.quiz__answer
  min-height: 90px;
  display: block;
  cursor: pointer;
  text-transform: uppercase;
  border-radius: 1.5rem;
  display: table;
  background-color rgba(255,153,0,0.5)
  width 100%
  height 100%

.quiz__answer:hover
  background-color black
  color white

.quiz__answer-text
  display table-cell
  text-align center
  pointer-events none
  vertical-align middle
  padding 10px

.quiz__answer.is-selected
  background-color black
  color white
  box-sizing border-box

.quiz__answer .answer-image
  width 90%
  margin 5%

/* Module/Block: Quiz Progress Panel */
.quiz__progress-panel
  border-top 1px solid #dcdcdc
  padding-top 30px
  margin-bottom -3px

.quiz__progress-panel__text
  margin-bottom 10px

/* Module/Block: Quiz Complete Panel Progress */
.quiz__progress-counter
  position: static;

.quiz__progress-counter.is-fixed
  position: fixed;

.quiz__progress-counter.is-fixed ul
  position relative
  top 40px
  transform translateY(-40px)
  transition transform 0.5s


@media (min-width: 768px)
  .quiz__progress-counter
    display: block;
    position: static;
    padding-top: 5px;
    padding-bottom: 5px;
    overflow hidden
    bottom: 0px;
    width: 100%;
    transform: translateZ(0);

@media (min-width: 1024px)
  .quiz__progress-counter
    width: auto;
    max-width: 650px;

.quiz__progress-counter ul
  margin-bottom: 0;
  margin-right: 1px;
  margin-top: 0;

.quiz__progress-counter li
  cursor: pointer;
  float: left;
  width: 30px;
  height: 30px;
  text-align: center;
  line-height: 30px;
  padding-left: 0;
  font-family: 'Graphik Web','Arial Black','Arial Bold',Arial,Helvetica,sans-serif;
  font-size: 14px;
  margin-right: 2px;
  margin-bottom: 3px;
  perspective: 1000;
  list-style none

.quiz__progress-counter li:last-child
  margin-right: 0;

.quiz__progress-counter li .front
.quiz__progress-counter li .back
  width: 30px;
  height: 30px;
  overflow: hidden;
  backface-visibility: hidden;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 15px;
  padding-top: 0px;
  font-family: arial;

/* Module/Block: Score Panel */
.quiz__score-panel
  display: block;
  margin-top: 14px;
  user-select: initial;

.quiz__score-panel__message
  margin-bottom: 17px;

.quiz__score-panel__message
.quiz__score-panel__summary
  opacity 0
  transition: opacity 1s;

.quiz__score-panel__message.is-revealed
.quiz__score-panel__summary.is-revealed
  opacity 1

.quiz__score-panel__summary
  margin-bottom 18px
  position static
  display block

// Formally .outcome-image
.quiz__score-panel__image
  display: none;
  max-width: 300px;

@media (min-width: 500px)
  .quiz__score-panel__image
    //

/* Module/Block: Flipper */
.flipper
  transition: 0.6s;
  transform-style: preserve-3d;
  position: relative;

.flipper__circle
  width: 30px;
  height: 30px;
  overflow: hidden;
  backface-visibility: hidden;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 15px;
  padding-top: 0px;
  font-family: arial;

.flipper__circle--front
  z-index: 2;
  transform: rotateY(180deg);
  background-color: black;
  color: white;

.flipper__circle--back
  transform: rotateY(0deg);
  background-color: #dcdcdc;
  color: black;

li.is-answered .flipper
  transform: rotateY(180deg);

.is-complete.is-answered .flipper
  transform: rotateY(0deg);
  color: white;

.is-complete.is-correct .flipper__circle
  background-color: rgb(34, 134, 34);
  color: white;

.is-complete.is-incorrect .flipper__circle
  background-color: #DD371E;
  color: white;

